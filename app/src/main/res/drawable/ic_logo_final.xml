<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 
         Using the Scaled Bitmap Wrapper inside insets.
         The bitmap is configured to 'fill', so it will shrink to fit 
         the bounds defined here (108dp - 32dp*2 = 44dp visual).
    -->
    <item 
        android:drawable="@drawable/ic_logo_scaled_bitmap"
        android:top="32dp"
        android:bottom="32dp"
        android:left="32dp"
        android:right="32dp" />
</layer-list>
