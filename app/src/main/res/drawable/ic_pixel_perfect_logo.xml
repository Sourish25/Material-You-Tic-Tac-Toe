<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cross (Bottom Layer) 
         Removing gravity="center" allows the large PNG to scale down 
         to fit the bounds defined by the insets (64dp x 64dp effective area)
    -->
    <item 
        android:drawable="@drawable/ic_part_cross"
        android:top="22dp"
        android:bottom="22dp"
        android:left="22dp"
        android:right="22dp" />
        
    <!-- Curve (Top Layer) -->
    <item 
        android:drawable="@drawable/ic_part_curve"
        android:top="22dp"
        android:bottom="22dp"
        android:left="22dp"
        android:right="22dp" />
</layer-list>
